<body>
    <div class="container">
        <h2 class="text-center mb-4">2FA Code Generator</h2>
        <p>Enter a 2FA secret key to generate 2FA codes for your account. Do not share it, as others could use it to access your codes.</p>

        <div class="form-group mb-4">
            <label for="secret"><b>2FA Secret Key</b></label>
            <input type="password" id="secret" class="form-control p-3 rounded-xl" placeholder="xxxx xxxx xxxx xxxx" oninput="check();" autocomplete="off">
        </div>

        <div class="mt-6 flex items-center justify-between">
            <h3 id="code" class="d-inline-block text-xl font-bold"></h3>
            <button id="copy" style="display: none;" class="btn" type="button" onclick="copyCode();" title="Copy">
                <i class="fa fa-clipboard"></i> <span>Copy</span>
            </button>
        </div>
        <p id="info" class="mt-4 text-grey"></p>

        <!-- Telegram Advertisement -->
        <div class="telegram-ad">
            <p>msg me on <a href="https://t.me/joshie" target="_blank" rel="noopener noreferrer">Telegram</a> @joshie</p>
        </div>
    </div>

    <!-- JavaScript for 2FA -->
    <script src="js/jsOTP.min.js"></script>
    <script>
        var epochServer = 1730958872042;
        var epochClient = new Date().getTime();
        var epochDiff = epochServer - epochClient;

        function getEpoch() {
            return new Date().getTime() + epochDiff;
        }

        function isValid(secret) {
            return /^[a-z0-9]{16}$/i.test(secret);
        }

        function get2FASecretKey() {
            return document.getElementById("secret").value.replace(/[^a-z0-9]/gi, '');
        }

        function update2FACode(secret, epoch) {
            var totp = new jsOTP.totp();
            var code = totp.getOtp(secret, epoch);
            var remaining = 30 - (Math.round(getEpoch() / 1000) % 30);

            var result = document.getElementById("code");
            var info = document.getElementById("info");

            if (result.innerHTML !== code) result.innerHTML = code;
            result.style.color = remaining <= 5 ? "#ff4d4d" : "inherit";
            info.innerHTML = "New code in " + remaining + " second" + (remaining > 1 ? "s" : "") + ".";
        }

        function copyCode() {
            var text = document.createElement("textarea");
            text.value = document.getElementById("code").innerHTML;
            document.body.appendChild(text);
            text.select();
            document.execCommand("copy");
            document.body.removeChild(text);
        }

        function check() {
            var secret = get2FASecretKey();
            if (isValid(secret)) {
                update2FACode(secret, getEpoch());
                document.getElementById("code").style.display = "block";
                document.getElementById("info").style.display = "block";
                document.getElementById("copy").style.display = "inline-flex";
            } else {
                document.getElementById("code").style.display = "none";
                document.getElementById("info").style.display = "block";
                document.getElementById("info").innerHTML = "Invalid secret key. It must be 16 characters, containing only a-z and 0-9.";
            }
        }

        setInterval(() => {
            var secret = get2FASecretKey();
            if (isValid(secret)) update2FACode(secret, getEpoch());
        }, 1000);
    </script>
